<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetupBranch">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Space
                android:layout_width="match_parent"
                android:layout_height="80dp" />

            <TextView
                android:id="@+id/textTitleSetupBranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Title_SetupBranch"
                android:textAlignment="center"
                android:textSize="36sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Label_PhoneNumber" />

            <EditText
                android:id="@+id/textboxPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Label_Address" />

            <EditText
                android:id="@+id/textboxAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Label_WorkingHours"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Label_InputMessage" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Label_Open" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Label_Close" />
                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Label_Sunday" />

                    <EditText
                        android:id="@+id/textboxSundayOpen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="datetime" />

                    <EditText
                        android:id="@+id/textboxSundayClose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="datetime" />
                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Label_Monday" />

                    <EditText
                        android:id="@+id/textboxMondayOpen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="datetime" />

                    <EditText
                        android:id="@+id/textboxMondayClose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="datetime" />

                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Label_Tuesday" />

                    <EditText
                        android:id="@+id/textboxTuesdayOpen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="datetime" />

                    <EditText
                        android:id="@+id/textboxTuesdayClose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="datetime" />

                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Label_Wednesday" />

                    <EditText
                        android:id="@+id/textboxWednesdayOpen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="datetime" />

                    <EditText
                        android:id="@+id/textboxWednesdayClose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="datetime" />

                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Label_Thursday" />

                    <EditText
                        android:id="@+id/textboxThursdayOpen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="datetime" />

                    <EditText
                        android:id="@+id/textboxThursdayClose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="datetime" />
                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Label_Friday" />

                    <EditText
                        android:id="@+id/textboxFridayOpen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="datetime" />

                    <EditText
                        android:id="@+id/textboxFridayClose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="datetime" />
                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Label_Saturday" />

                    <EditText
                        android:id="@+id/textboxSaturdayOpen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="datetime" />

                    <EditText
                        android:id="@+id/textboxSaturdayClose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="datetime" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCreateBranch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="createBranch"
                    android:text="@string/BtnText_Create" />

                <Button
                    android:id="@+id/btnBackSetupBranch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/BtnText_Cancel" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>