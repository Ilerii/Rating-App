<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditOfferedServices">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:weightSum="40"
        >


    <ScrollView
        android:id = "@+id/editServicesScrollView"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="32"
        android:layout_marginTop="8dp"
        >

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            >

            <TableLayout
                android:id="@+id/EditOfferedServicesServiceTable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"></TableLayout>

        </HorizontalScrollView>

    </ScrollView>


        <Button
            android:id="@+id/btnEditServiceEditOfferedServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btnAddRemoveServices" />

        <Button
            android:id="@+id/btnBackEditOfferedServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/BtnText_Back" />

        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:layout_marginBottom="20dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>